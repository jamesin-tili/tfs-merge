<Window x:Class="TFSMergingTool.Resources.StringInputWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TFSMergingTool.Resources"
        mc:Ignorable="d"
        Title="StringInputWindow"
        WindowStartupLocation="CenterOwner" 
        SizeToContent="WidthAndHeight" MinWidth="300" MinHeight="100"
        WindowStyle="SingleBorderWindow" ResizeMode="CanMinimize">
    <StackPanel Margin="5">
        <TextBlock Name="txtQuestion" Margin="5"/>
        <TextBox Name="txtResponse" Margin="5"/>
        <StackPanel Orientation="Horizontal" Margin="5" HorizontalAlignment="Right">
            <Button Content="_Ok" IsDefault="True" Margin="5" Name="btnOk" Click="btnOk_Click" Width="50"/>
            <Button Content="_Cancel" Margin="5" Name="btnCancel" Click="btnCancel_Click" Width="50" />
        </StackPanel>
    </StackPanel>
</Window>
